{
  "id": "package-readme",
  "instanceId": "static",
  "description": "Fetch the README.md of an npm package (optionally at a specific version).",
  "tools": [
    {
      "name": "readme",
      "description": "Return the README markdown for a package@version.",
      "parameters": {
        "vendor": "zod",
        "schema": {
          "type": "object",
          "properties": {
            "name":  { "type": "string", "description": "Package name, e.g. \u201creact\u201d" },
            "version": { "type": "string", "description": "Semver (defaults to latest)", "nullable": true }
          },
          "required": ["name"],
          "additionalProperties": false
        }
      }
    }
  ]
}
